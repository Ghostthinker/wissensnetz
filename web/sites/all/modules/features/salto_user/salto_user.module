/**
 * (persmission)
 * admin or dosb get true
 *
 * @return bool
 */
function salto_user_user_is_dosb() {
  global $user;

  //admin may always
  if (user_has_role(3)) {
    return TRUE;
  }

  return user_has_role(ROLE_GLOBAL_DOSB_RID, $user);
}


