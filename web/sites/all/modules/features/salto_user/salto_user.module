    return;
  }

  $panelOrgId = $variables['display']->panels['middle'][1];
  $panelOrg = $variables['display']->renderer_handler->rendered['panes'][$panelOrgId];

  $panel = $variables['display']->renderer_handler->rendered['panes'][$panelId];
